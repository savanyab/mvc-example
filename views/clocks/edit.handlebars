<h2>Edit</h2>
<form method="POST" action="/clocks/{{clock.id}}?_method=PUT">
  <div class="form-group">
    <label for="manufacturer">Manufacturer</label>
    <input type="text" class="form-control" name="manufacturer" value="{{clock.manufacturer}}"/>
  </div>
  <div class="form-group">
    <label for="model">Model</label>
    <input type="text" class="form-control" name="model" value="{{clock.model}}" />
  </div>
  <div class="form-group">
    <label for="model">Type</label>
    <input type="text" class="form-control" name="type" value="{{clock.type}}" />
  </div>
  <input type="submit" value="Frissítés" />
</form>